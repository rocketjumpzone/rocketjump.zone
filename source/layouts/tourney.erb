<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

    <title><%= current_page.data.title %></title>

    <link rel="apple-touch-icon" sizes="180x180" href="/images/apple-touch-icon.png">
    <link rel="icon" type="image/png" sizes="32x32" href="/images/favicon-32x32.png">
    <link rel="icon" type="image/png" sizes="16x16" href="/images/favicon-16x16.png">
    <link rel="manifest" href="/images/site.webmanifest">
    <link rel="mask-icon" href="/images/safari-pinned-tab.svg" color="#18181b">
    <link rel="shortcut icon" href="/images/favicon.ico">
    <meta name="msapplication-TileColor" content="#18181b">
    <meta name="msapplication-config" content="/images/browserconfig.xml">
    <meta name="theme-color" content="#ffffff">

    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.6.0/css/all.min.css">

    <%= stylesheet_link_tag "w3" %>
    <%= stylesheet_link_tag "general" %>

    <style>
      th {
        font-size: 25px;
        padding: 16px !important;
      }
    </style>
    <%= javascript_include_tag "jquery.min" %>
    <%= javascript_include_tag "preview-image" %>

    <script>
      $(document).ready(function () {

        $("#participants-button").click(function () {
          $("#players").toggle();
          $(this).text(
            $(this).text() == 'SHOW PARTICIPANTS'
              ? 'HIDE PARTICIPANTS'
              : 'SHOW PARTICIPANTS'
          );
        });

        var target = window.location.hash.replace('#', '');
        if (target != "") {
          openCity(event, "Paris");
          $("[tourney-menu]").find(".tablink").removeClass("w3-border-red")
          $($("[tourney-menu]").find(".tablink")[1]).addClass("w3-border-red")
        }
      });
    </script>

  </head>

  <body>
    <%= partial "partials/nav-top" %>
    <%= partial "partials/nav" %>
    <div class="w3-stretch w3-container" style="margin:30px auto 150px auto">
      <%= yield %>

    </div>
    <!-- end of w3-stretch-->

    <script>
      $.previewImage({
        xOffset: -100,
        yOffset: 20,
        css: {
          'border': '2px solid black',
          'background-color': '#dedede'
        }
      });
    </script>

    <%= javascript_include_tag "general" %>
    <script src='https://platform-api.sharethis.com/js/sharethis.js#property=5e3d49fcc42462001276008a' async='async'></script>

  </body>
</html>
