---
title: Blog By Category
pageable: true
per_page: 12
---

<div class="w3-content w3-container">
    <h1>Articles tagged '<%= tagname %>'</h1>

    <% if paginate && num_pages > 1 %>
      <p>Page
        <%= page_number %>
        of
        <%= num_pages %></p>

      <% if prev_page %>
        <p><%= link_to 'Previous page', prev_page %></p>
      <% end %>
    <% end %>

    <ul>
      <% page_articles.each_with_index do |article, i| %>
        <li><%= link_to article.title, article %>
          <i style="color:#555"><%= article.date.strftime('%b %e') %></i>
        </li>
      <% end %>
    </ul>

    <% if paginate %>
      <% if next_page %>
        <p><%= link_to 'Next page', next_page %></p>
      <% end %>
    <% end %>
</div>
